<h1>My lists</h1>

<div class="lists_container">
  <% if @lists.any? %>
    <ul>
      <% @lists.each do |list| %>
        <% if list.name.downcase == "comedy"%>
          <% url = "comedy_gnome_edit.png" %>
        <% elsif list.name.downcase == "horror" %>
          <% url = "horror_gnome3_edit.png" %>
        <% elsif list.name.downcase == "romcom" %>
          <% url = "romance_gnomes2_edit.png" %>
        <% elsif list.name.downcase == "fantasy" %>
          <% url = "adventure_gnome_edit.png" %>
        <% elsif list.name.downcase == "action" %>
          <% url = "adventure_gnome2_edit.png" %>
        <% elsif list.name.downcase == "anime" %>
          <% url = "anime_gnome_edit.png" %>
        <% elsif list.name.downcase == "favorites" %>
          <% url = "di-gnome_edit.png" %>
        <% else %>
          <% url = "gnome_pointing_edit.png" %>
        <% end %>
        <div class="card bg-dark text-white">
          <%= image_tag url, alt: "Le Wagon", width: 200 %>
          <div class="card-img-overlay">
            <h5 class="card-title"><%= link_to list.name, list_path(list[:id]), class: "btn btn-outline-info"%></h5>

            <%= link_to 'Delete', lists_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger"%>
          </div>
        </div>
      <% end %>
    </ul>
  <% else %>
    <p>You don't have any lists yet!
  <% end %>
</div>

<%= link_to 'Add a list', new_list_path, class: "btn btn-primary" %>
